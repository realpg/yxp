<view style="height:10rpx;background: #f8f8f8;width:100%;"></view>
<view style="height:12rpx;background: #fff;width:100%;"></view>
<view class="page">
  <view class="page__bd" style='width:100%' wx:for="{{order}}">
    <view style="height:14rpx;background: #fff;width:100%;"></view>
    <view style="height:40rpx;background:#f8f8f8;width:100%;">
      <view class="ddd">
        <view style="float:left;padding-left:5px;font-size:28rpx;">{{item.time}}</view>
        <view style="float:right;padding-right:5px;font-size:28rpx;">订单编号：{{item.order_num}}</view>
      </view>
    </view>
    <view class="icon-box" style='width:100%;height:250rpx'>

      <image src="{{item.img}}" style='width:30%; height:230rpx;padding:10rpx,0rpx;float:left'></image>
      <view class="icon-box__ctn">
        <view class="icon-box__title" style='font-size:28rpx;'>{{item.name}}</view>
        <view class="icon-box__desc"style='font-size:28rpx;'>金额：￥{{item.price}}</view>
        <view class="icon-box__desc"style='font-size:28rpx;'>
          <view style="float:left;font-size:28rpx;">数量：x {{item.num}}</view>
          <view style="float:left;padding-left:55px;color:#C78B69;font-size:28rpx;">购买方式：{{item.way}}</view>
        </view>
      </view>
    </view>
    <view class="aaa">
      <view class="bbb">
        <button class="weui-btn mini-btn" type="primary" size="mini"style='font-size:28rpx;'>查看物流</button>
        <button class="weui-btn mini-btn" type="primary" size="mini"style='font-size:28rpx;'>确认收货</button>
      </view>
    </view>
  </view>
</view>