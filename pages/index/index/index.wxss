/**index.wxss**/

/* 搜索 */

.searchbar-result {
  margin-top: 0;
  font-size: 14px;
}

.searchbar-result:before {
  display: none;
}

.weui-cell {
  padding: 12px 15px 12px 35px;
}

/* 轮播图 */

.slide-image {
  width: 100%;
  height: 100%;
}

.advertising-image{
  width:90%;
  height:100%;
  border-radius: 20rpx;
  margin: 0 5%;
}

/* 今日推荐 */
.line-text {
  font-size: 30rpx;
  border-left: 5px solid #e75110;
  padding-left: 20rpx;
  margin: 20rpx 0rpx;
  /* font-weight: bold; */
}

/* 横向滚动 */

.recommend_scroll_x_box {
  height: 180rpx;
  white-space: nowrap;
  display: flex;
  /* margin-left: 18rpx;  */
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.recommend_hot_box {
  width: 160rpx;
  height: 160rpx;
  margin-left: 26rpx;
  margin-top: 20rpx;
  display: inline-block;
}

.recommend_hot_image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 10rpx;
}

.recommend_absolute {
  text-align: center;
  position: absolute;
  margin: auto;
  top: 50%;
  left: 50%;
  transform: translate(-60%, -55%);
  color: white;
  font-size: 35rpx;
}
