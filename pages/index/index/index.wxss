/**index.wxss**/

/* 搜索 */

page {
  background-color: white;
}

.searchbar-result {
  margin-top: 0;
  font-size: 14px;
}

.searchbar-result:before {
  display: none;
}

.no-data-image {
  width: 50%;
  /* height: 294rpx; */
}

.weui-cell {
  padding: 12px 15px 12px 35px;
}

/* 轮播图 */

.slide-image {
  width: 100%;
  height: 100%;
}

.advertising-image {
  width: 90%;
  height: 100%;
  border-radius: 10rpx;
  margin: 0 5%;
}

/* 今日推荐 */

.line-text {
  font-size: 30rpx;
  border-left: 5px solid #e75110;
  padding-left: 20rpx;
  margin: 20rpx 0rpx;
  /* font-weight: bold; */
}

/* 横向滚动 */

.recommend_scroll_x_box {
  height: 180rpx;
  white-space: nowrap;
  display: flex;
  /* margin-left: 18rpx;  */
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.recommend_hot_box {
  width: 160rpx;
  height: 160rpx;
  margin-left: 26rpx;
  margin-top: 20rpx;
  display: inline-block;
}

.recommend_hot_image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 10rpx;
}

.recommend_absolute {
  text-align: center;
  position: absolute;
  margin: auto;
  top: 50%;
  left: 50%;
  transform: translate(-60%, -55%);
  color: white;
  font-size: 35rpx;
}

.icon-box__ctn {
  flex-shrink: 100;
}

.icon-box__title {
  font-size: 20px;
}

.icon-box__desc {
  margin-top: 6px;
  font-size: 12px;
  color: #888;
}

.bg-gray {
  display: block;
  height: 220rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  width: 580rpx;
  background-color: #f9f9f9;
  padding-left: 10rpx;
}

icon {
  margin-right: 13px;
}

.page__bd {
  padding-left: 40px;
  padding-right: 40px;
  text-align: left;
}

.icon-box {
  margin-bottom: 25px;
  display: flex;
  align-items: center;
}

.icon-box__ctn {
  flex-shrink: 100;
}

.icon-box__title {
  font-size: 20px;
}

.icon-box__desc {
  margin-top: 6px;
  font-size: 12px;
  color: #888;
}

.icon_sp_area {
  margin-top: 10px;
  text-align: left;
}

.weui-form-preview__label {
  font-size: 28rpx;
  color: black;
}

.weui-form-preview__value {
  font-size: 28rpx;
  color: black;
}

.weui-article__p {
  word-wrap: break-word;
}

.title-margin {
  margin-left: 40rpx;
}

.farm-index {
  position: absolute;
  top: 40rpx;
  right: 80rpx;
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 25rpx;
}

.farm-image {
  position: absolute;
  bottom: 20rpx;
  left: 80rpx;
  text-align: center;
}

.zan-loadmore--nodata {
  margin-top: 80rpx;
}

.zan-loadmore {
  position: relative;
  width: 65%;
  margin: 0px auto;
  line-height: 20px;
  font-size: 14px;
  text-align: center;
  vertical-align: middle;
}
