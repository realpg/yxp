<picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
  <view class="zan-cell">
    <view class="zan-cell__bd">
      <view style='margin-left:35rpx; color:#FF5777'>{{array[index]}}</view>
      <view class="zan-arrow"></view>
    </view>
  </view>
  <view class='zan-cell'>
    <view style='margin-left:35rpx;'>{{farmList[index].province}}</view>
    <view style='margin-left:35rpx;'>{{farmList[index].city}}</view>
  </view>
  <view class='zan-cell' style='margin-left:35rpx;'>{{farmList[index].address}}</view>
</picker>

<view class="page">
  <view class="page__bd">
    <view class="weui-tab">
      <view class="weui-navbar">
        <block wx:for="{{tabs}}" wx:key="*this">
          <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
            <view class="weui-navbar__title">{{item}}</view>
          </view>
        </block>
        <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
      </view>
      <view class="weui-tab__panel">
        <view hidden="{{activeIndex != 0}}">
          <view style='height:20rpx;'></view>
          <block wx:for="{{FarmsDetails}}">
            <block wx:if="{{item.type == 1}}">
              <image src='{{item.content}}' class='image' style='margin:0 3%;'></image>
            </block>
          </block>

        </view>
        <view hidden="{{activeIndex != 1}}">

          <view style='height:20rpx;'></view>
          <block wx:for="{{FarmsDetails}}">
            <block wx:if="{{item.type == 2}}">
              <video src='{{item.content}}' class='image' style='margin:0 3%;'></video>
            </block>
          </block>

        </view>
        <view class="weui-tab__content" hidden="{{activeIndex != 2}}">

          <!-- <block wx:for="{{FarmsDetails}}">

          </block> -->

          <map id="map" longitude="{{farmList[index].lon}}" latitude="{{farmList[index].lat}}" scale="14" controls="{{controls}}" bindcontroltap="controltap" markers="{{markers}}" bindmarkertap="markertap" bindregionchange="regionchange" show-location style="width: 100%; height: 300px;"></map>

        </view>
      </view>
    </view>
  </view>
</view>

